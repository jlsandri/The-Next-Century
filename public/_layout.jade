doctype
html
  head
    title #{ title }
    link(rel="stylesheet" href="./main.css")

    link(href='http://fonts.googleapis.com/css?family=Playfair+Display:900' rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Anonymous+Pro' rel='stylesheet' type='text/css')

    script(src="http://code.jquery.com/jquery-1.11.2.min.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/dat-gui/0.5/dat.gui.min.js")
    script(src="./assets/js/analytics.js")
    script(src="./assets/js/skrollr.min.js")
    script(src="./assets/js/smooth-scroll.min.js")
    script(src="./main.js")

    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')

  body
      != partial("/_partials/_side-nav")
      .frame(data-1000="background-color:rgb(174,205,231);" data-3000="background-color:rgb(158,231,201);")
        != partial("/_partials/_header")
        != yield
        != partial("/_partials/_footer")